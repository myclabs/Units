<?xml version="1.0" encoding="UTF-8"?>

<xml xmlns="http://www.example.org/extension"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://www.example.org/extension extension.xsd ">

    <!-- Pour toutes les conventions relatives à l'ordre entre les objets, le choix des identifiants, des symboles, et des libellés, voir specs -->

    <extension ref="co2e">
        <name>
            <fr>équivalent CO2</fr>
            <en>CO2 equivalent</en>
        </name>
        <symbol>
            <fr>équ. CO2</fr>
            <en>CO2 eq.</en>
        </symbol>
        <multiplier>1</multiplier>
    </extension>

    <extension ref="ce">
        <name>
            <fr>équivalent carbone</fr>
            <en>carbon equivalent</en>
        </name>
        <symbol>
            <fr>équ. C</fr>
            <en>C eq.</en>
        </symbol>
        <multiplier>3.666666667</multiplier>
    </extension>

</xml> 